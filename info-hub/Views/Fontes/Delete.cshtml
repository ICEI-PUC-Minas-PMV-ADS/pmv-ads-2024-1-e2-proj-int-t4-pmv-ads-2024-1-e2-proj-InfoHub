@model info_hub.Models.Fonte

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover uma fonte</h1>

<h3>Tem certeza que deseja remover este registro?</h3>
<div>
    <h4>Fonte</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Endereço)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereço)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-info">Retornar</a> |
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        
    </form>
</div>
